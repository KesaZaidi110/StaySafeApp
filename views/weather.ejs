<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Weather Forecast</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .weather-container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.15);
      max-width: 480px;
      width: 100%;
      padding: 2rem;
      margin: 2rem auto;
      flex-grow: 1;
    }
    h1 {
      font-weight: 700;
      text-align: center;
      margin-bottom: 1.5rem;
      color: #007bff;
    }
    .form-group {
      margin-bottom: 1.5rem;
    }
    input[type="text"] {
      border-radius: 50px;
      padding: 10px 20px;
      font-size: 1.1rem;
      border: 2px solid #007bff;
      width: 100%;
      transition: border-color 0.3s ease;
    }
    input[type="text"]:focus {
      outline: none;
      border-color: #0056b3;
      box-shadow: 0 0 8px #0056b3;
    }
    button {
      background-color: #007bff;
      border-radius: 50px;
      border: none;
      color: white;
      padding: 10px 30px;
      font-size: 1.1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
      width: 100%;
    }
    button:hover {
      background-color: #0056b3;
    }
    .weather-result {
      margin-top: 2rem;
      text-align: center;
    }
    .weather-icon {
      width: 100px;
      height: 100px;
    }
    .error-message {
      color: red;
      text-align: center;
      margin-top: 1rem;
    }

    .additional-info {
      margin-top: 1.5rem;
      text-align: left;
      font-size: 0.95rem;
      color: #444;
    }

    .additional-info p {
      margin: 0.3rem 0;
    }

    .forecast-container {
      margin-top: 2rem;
      display: flex;
      justify-content: space-between;
      gap: 1rem;
      flex-wrap: nowrap;
      overflow-x: auto;
    }

    .forecast-day {
      background: #e7f1ff;
      border-radius: 10px;
      padding: 1rem;
      flex: 1 0 30%;
      text-align: center;
      box-shadow: 0 3px 8px rgba(0, 123, 255, 0.2);
    }

    .forecast-day img {
      width: 50px;
      height: 50px;
    }

    /* Responsive */
    @media (max-width: 600px) {
      .weather-container {
        max-width: 100%;
        padding: 1.5rem;
      }
      .forecast-container {
        flex-wrap: nowrap;
      }
      .forecast-day {
        flex: 0 0 45%;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">StaySafeApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/weather">Weather</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="weather-container">
    <h1>Weather Forecast</h1>

    <form id="weatherForm" action="/weather" method="POST">
      <div class="form-group">
        <input
          type="text"
          name="city"
          id="cityInput"
          placeholder="Enter city name"
          required
          autocomplete="off"
        />
      </div>
      <button type="submit">Get Weather</button>
    </form>

    <% if (error) { %>
      <div class="error-message"><%= error %></div>
    <% } %>

    <% if (weather) { %>
      <div class="weather-result">
        <h2><%= weather.name %>, <%= weather.sys.country %></h2>
        <img
          src="http://openweathermap.org/img/wn/<%= weather.weather[0].icon %>@2x.png"
          alt="Weather Icon"
          class="weather-icon"
        />
        <p style="font-size: 1.5rem; font-weight: bold;">
          <%= weather.main.temp %>째C
        </p>
        <p style="text-transform: capitalize;"><%= weather.weather[0].description %></p>
        
        <div class="additional-info">
          <p><strong>Feels Like:</strong> <%= weather.main.feels_like %>째C</p>
          <p><strong>Humidity:</strong> <%= weather.main.humidity %>%</p>
          <p><strong>Pressure:</strong> <%= weather.main.pressure %> hPa</p>
          <p><strong>Wind Speed:</strong> <%= weather.wind.speed %> m/s</p>
          <p><strong>Sunrise:</strong> <%= new Date(weather.sys.sunrise * 1000).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></p>
          <p><strong>Sunset:</strong> <%= new Date(weather.sys.sunset * 1000).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></p>
        </div>

        <% if (typeof forecast !== 'undefined' && forecast.length) { %>

          <h3 style="margin-top: 2rem; color: #007bff;">3-Day Forecast</h3>
          <div class="forecast-container">
            <% forecast.forEach(day => { %>
              <div class="forecast-day">
                <h5><%= day.date %></h5>
                <img src="http://openweathermap.org/img/wn/<%= day.icon %>@2x.png" alt="Icon" />
                <p><strong><%= day.temp_min %>째C - <%= day.temp_max %>째C</strong></p>
                <p style="text-transform: capitalize;"><%= day.description %></p>
              </div>
            <% }) %>
          </div>
        <% } %>

      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.getElementById('weatherForm').addEventListener('submit', function (e) {
      const cityInput = document.getElementById('cityInput');
      if (!cityInput.value.trim()) {
        e.preventDefault();
        alert('Please enter a city name.');
      }
    });
  </script>

</body>
</html>
